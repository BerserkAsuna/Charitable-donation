<!--pages/login/login.wxml-->
<image src="/photo/heart.png" style="width:100%"></image>
<van-cell-group>
  <van-field
   value="{{ username }}"
    clearable
    label="手机号"
    placeholder="请输入手机号"
    bindinput="name"
  />
  <van-field
    value="{{ password }}"
    type="password"
    label="密码"
    placeholder="请输入密码"
    bindinput="password"
    border="{{ false }}"
  />
</van-cell-group>
<view class="small">
<view bindtap="register">立即注册</view>
<view bindtap="password1">忘记密码?</view>
</view>
<view class="local">
<van-button type="primary" size="normal" color="#008000" bind:click="click">登录</van-button>
</view>



