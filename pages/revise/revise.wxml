<!--pages/revise/revise.wxml-->
<van-cell-group>
  <van-field
    clearable
    label="用户名"
    placeholder="请输入用户名"
    bind:click-icon="onClickIcon"
    bind:change="onchange1"
  />
  <van-field
    label="姓名"
    placeholder="请输入真实姓名"
    border="{{ false }}"
    bind:change="onchange2"
  />
  <van-field
    label="性别"
    placeholder="男 / 女"
    border="{{ false }}"
    bind:change="onchange3"
    error-message="{{message}}"
  />
</van-cell-group>
<view class="local">
<van-button type="primary" size="normal" color="#008000" bindclick="click">保存</van-button>
</view>
