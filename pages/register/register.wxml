<!--pages/register/register.wxml-->
<van-cell-group>
  <van-field
    clearable
    label="用户名"
    placeholder="请输入用户名"
    bind:click-icon="onClickIcon"
    bind:change="onchange1"
  />

  <van-field
    type="password"
    label="密码"
    placeholder="请输入密码"
    border="{{ false }}"
    bind:change="onchange2"
    error-message="{{message}}"
  />
  
  <van-field
    type="password"
    label="确认密码"
    placeholder="请输入确认密码"
    border="{{ false }}"
    bind:change="onchange3"
    error-message="{{message2}}"
  />
  <van-field
    label="姓名"
    placeholder="请输入真实姓名"
    border="{{ false }}"
    bind:change="onchange4"
  />
  <van-field
    label="性别"
    placeholder="男 / 女"
    border="{{ false }}"
    bind:change="onchange5"
    error-message="{{message3}}"
  />
  <van-field
    label="手机号"
    placeholder="请输入手机号"
    border="{{ false }}"
    bind:change="onchange6"
    error-message="{{message4}}"
  />
  <van-field
    label="邮箱"
    placeholder="请输入邮箱"
    border="{{ false }}"
    bind:change="onchange7"
    error-message="{{message5}}"
  />
  <van-field
    label="学号"
    placeholder="请输入学号"
    border="{{ false }}"
    bind:change="onchange8"
  />
  <van-field
    label="班级"
    placeholder="请输入班级"
    border="{{ false }}"
    bind:change="onchange9"
  />
  <van-field
    label="学院"
    placeholder="请输入学院名称"
    border="{{ false }}"
    bind:change="onchange10"
  />
</van-cell-group>
<view class="local">
<van-button type="primary" size="normal" color="#008000" bindclick="adduser">确定注册</van-button>
<van-button type="primary" size="normal" color="#008000" bindclick="click">取消注册</van-button>
</view>